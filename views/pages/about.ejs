            <h2 id="contactmeform">Contact Me!
            <%= name.displayName %>
            </h2>
            <% if(!loggedIn){ %>
                <p>Would you like to <a href='/login?returnTo=/about'>Log In</a></p>
            <%}%>
            <form id="contactme">
                <div><label for="name">Name:</label><input type="text" id="name" value="<%= name.displayName %>"/>
                </div>
                <div><label for="email">Email:</label><input type="text" id="email" value="<%= name.email %>"/></div>
                <div><label for="message">Message:</label><br/><br /><textarea cols=75 rows=5 id="message">test message</textarea></div>
                <button class='button' id="submit">Send</button>
            </form>
            <div id="msgdiv"></div>
            <script>
                $("#contactme").submit(checkandsend);
                function showmsg(msg){
                    $("#msgdiv").empty()
                    $("#msgdiv").append(msg);
                    $("#msgdiv").addClass("on");

                    
                }
                function checkandsend(e){
                    e.preventDefault();
                    $("#msgdiv").empty();
                    if(!$("#name").val() || $("#name").val() == ""){
                        showmsg("You forgot to tell me your name.");
                        return false;
                    }
                    if(!$("#email").val() || $("#email").val() == "" || !$("#email").val().match(/^.+@.+\..+$/)){
                        showmsg("Ummm...is that your email?");
                        return false;
                    }
                    if (!$("#message").val() || $("#message").val() == "") {
                        showmsg("Tell me what you want, what you really, really want...in the message.");
                        return false;
                    }
                    $.ajax({
                        "url": "/api/msg",
                        "method": "POST",
                        "timeout": 0,
                        "headers": {
                            "Content-Type": "application/json"
                        },
                        "data": JSON.stringify({
                            "name": $("#name").val(),
                            "email": $("#email").val(),
                            "message": $("#message").val()
                        }),
                        success:function(d){
                            $("#msgdiv").empty();
                            $("#name").val("");
                            $("#email").val("");
                            $("#message").val("");
                        },
                        error:function(err){
                            console.log(err);
                        }
                    })
                }
            </script>
